CPP = g++
CPPFLAGS = -DNDEBUG -Wall -O3

BIN = GreKo

OBJ = bitboards.o \
      book.o      \
      eval.o      \
      main.o      \
      moves.o     \
      notation.o  \
      position.o  \
      search.o    \
      utils.o     \
      unix.o

LINKOBJ = $(OBJ)

.PHONY:	all clean

all:	$(BIN)

clean:
	rm -f $(OBJ) $(BIN)

$(BIN):	$(OBJ)
	$(CPP) $(LINKOBJ) -o $(BIN)

.o: .cpp 
	$(CPP) $(CPPFLAGS) -c $< -o $@

